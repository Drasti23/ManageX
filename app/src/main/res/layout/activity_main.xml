<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="clip_vertical|center_horizontal"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".MainActivity">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Welcome to ManageX!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/bgBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvSubtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="Manage your Restaurant with ease."
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/bgBlue" />

    <!-- Menu Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="2">

        <!-- POS Button -->
        <LinearLayout
            android:id="@+id/llPos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_4" />

            <TextView
                android:id="@+id/tvPOS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="POS"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/bgBlue"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Time Register Button -->
        <LinearLayout
            android:id="@+id/llTimeRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_5" />

            <TextView
                android:id="@+id/tvTimeRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Time Register"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/bgBlue"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Order History Button -->
        <LinearLayout
            android:id="@+id/llOrderHistory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_6" />

            <TextView
                android:id="@+id/tvOrderHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Order History"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/bgBlue"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Settings Button -->
        <LinearLayout
            android:id="@+id/llSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/img_7" />

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Settings"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/bgBlue"
                android:textStyle="bold" />
        </LinearLayout>
    </GridLayout>
</LinearLayout>
