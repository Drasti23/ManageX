<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

    <!-- Left Side: Slot Creation Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/theme_2">

        <TextView
            android:id="@+id/tvSelectedWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Week"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@color/light_background"
            android:textColor="@color/gray1"
            android:clickable="true"
            android:focusable="true" />

        <CalendarView
            style="@style/CustomCalendarView"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dateTextAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            />

        <TextView
            android:id="@+id/tvStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Start Time"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:background="@color/light_background"
            android:textColor="@color/gray1"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tvEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select End Time"
            android:textSize="14sp"
            android:padding="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:background="@color/light_background"
            android:textColor="@color/gray1"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/tvDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duration: 0 hrs"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:padding="8dp"
            android:gravity="center"
            android:background="@color/light_background"
            android:textColor="@color/gray1" />

        <Spinner
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:id="@+id/spinnerEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:prompt="@string/select_employee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnCreateSlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/okeBlue"
                android:text="Create" />

            <Space
                android:layout_width="16dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnCancelSlot"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="@color/beet"
                android:text="Cancel" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>


    <!-- Right Side: Schedule Matrix Table + Publish Button -->


    <HorizontalScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:fillViewport="true"
        android:scrollbars="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fillViewport="true">

        <TableLayout
                android:id="@+id/tableSchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:padding="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/textColor">

                <TableRow>
                    <TextView
                        android:text="Employee"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:background="@color/gray1"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Sun"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Mon"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Tue"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Wed"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Thu"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Fri"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:text="Sat"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:gravity="center"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white" />
                </TableRow>

            </TableLayout>

        </ScrollView>

        <!-- Publish Button Below the Table -->
        <Button
            android:id="@+id/btnPublish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publish Schedule"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/dark_blue"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>